<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <FrameLayout android:id="@+id/View" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#53D363"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <FrameLayout android:id="@+id/SCREENSHOT" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/SCREENSHOT_BUTTON" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Tap me to switch views" android:textSize="36sp" />
        </LinearLayout>
</LinearLayout>
